{
	"name": "pas2js-vscode",
	"displayName": "pas2js-vscode",
	"description": "Pas2JS for VSCode, creating, editing, refactoring, running, and reloading **Pas2JS** apps",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Programming Languages",
		"Linters",
		"Formatters",
		"Snippets"
	],
	"keywords": [
		"pascal",
		"delphi",
		"freepascal",
		"lazarus",
		"pas2js"
	],
	"license": "SEE LICENSE IN LICENSE.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/heliosroots/pas2js-vscode"
	},
	"publisher": "heliosroots",
	"icon": "images/icon.png",
	"main": "./sources/index.js",
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"languages": [
			{
				"id": "objectpascal",
				"extensions": [
					".pas",
					".pp",
					".lpr",
					".inc"
				],
				"aliases": [
					"ObjectPascal",
					"Pascal"
				],
				"mimetypes": [
					"text/x-objectpascal-source",
					"text/x-objectpascal"
				]
			}
		],
		"grammars": [
			{
				"language": "objectpascal",
				"scopeName": "source.objectpascal",
				"path": "./sintaxes/objectpascal.plist"
			}
		],
		"snippets": [
			{
				"language": "objectpascal",
				"path": "./snippets/objectpascal.json"
			}
		],
		"problemMatchers": [
			{
				"name": "pas2js",
				"fileLocation": [
					"absolute"
				],
				"pattern": {
					"regexp": "^([^(]+)\\(([0-9]+),([0-9]+)\\) ([A-Za-z]+): (.+)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		],
		"commands": [
			{
				"command": "pas2js.projectBuild",
				"title": "Pas2JS: Project - Build"
			},
			{
				"command": "pas2js.projectNew",
				"title": "Pas2JS: Project - New..."
			},
			{
				"command": "pas2js.projectLoadSettings",
				"title": "Pas2JS: Project - Settings"
			},
			{
				"command": "pas2js.codeCompletion",
				"title": "Pas2JS: Code - Completion"
			},
			{
				"command": "pas2js.codeIndentation",
				"title": "Pas2JS: Code - Indentation"
			},
			{
				"command": "pas2js.codeRefactoring",
				"title": "Pas2JS: Code - Refactoring..."
			}
		],
		"keybindings": [
			{
				"command": "pas2js.projectBuild",
				"key": "f9",
				"when": "!inDebugMode"
			}, 
			{
				"command": "pas2js.projectLoadSettings",
				"key": "f10",
				"when": "!inDebugMode"
			},
			{
				"command": "pas2js.codeCompletion",
				"key": "ctrl+shift+c",
				"when": "editorTextFocus && !editorReadonly && editorLangId == 'objectpascal'"
			}, 
			{
				"command": "pas2js.codeIndentation",
				"key": "ctrl+d",
				"when": "editorTextFocus && !editorReadonly && editorLangId == 'objectpascal'"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Pas2JS",
			"properties": {
				"pas2js.codetools": {
					"type": "string",
					"default": "",
					"description": "Path to the \"CodeTools\" executable."
				},
				"pas2js.compiler": {
					"type": "string",
					"default": "",
					"description": "Path to then \"Pas2JS\" executable."
				},
				"pas2js.compilerSourceDir": {
					"type": "string",
					"default": "",
					"description": "Path to then \"Pas2JS\" source files directory."
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}